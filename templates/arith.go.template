	x := (*[{{$limbCount}}]uint64)(unsafe.Pointer(&x_bytes[0]))[:]
	y := (*[{{$limbCount}}]uint64)(unsafe.Pointer(&y_bytes[0]))[:]
	out := (*[{{$limbCount}}]uint64)(unsafe.Pointer(&out_bytes[0]))[:]
