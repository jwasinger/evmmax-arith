func MulModMont{{mul $limbCount $limbBits}}(out_bytes, x_bytes, y_bytes, modulus []byte, modinv uint64) (error) {
	x := (*[{{$limbCount}}]uint64)(unsafe.Pointer(&x_bytes[0]))[:]
	y := (*[{{$limbCount}}]uint64)(unsafe.Pointer(&y_bytes[0]))[:]
	out := (*[{{$limbCount}}]uint64)(unsafe.Pointer(&out_bytes[0]))[:]
	mod := (*[{{$limbCount}}]uint64)(unsafe.Pointer(&modulus[0]))[:]

	return mulmodMont{{mul $limbCount $limbBits}}(out, x, y, mod, modinv)
}

/* NOTE: addmod/submod/mulmodmont assume:
	len(z) == len(x) == len(y) == len(mod)
*/

func mulmodMont{{mul $limbCount $limbBits}}(z, x, y, mod []uint64, modinv uint64) (error) {
    var t [{{$limbCount}}]uint64
	var c [{{$limbCount}}]uint64
	var sub_val []uint64 = mod

	if x[{{sub $limbCount 1}}] >= mod[{{sub $limbCount 1}}] || y[{{sub $limbCount 1}}] >= mod[{{sub $limbCount 1}}] {
		panic(errors.New("x/y must be smaller than modulus"))
	}

	{{- range $j := intRange 0 $limbCount}}
		// round {{$j}}
		{{- if eq $j 0}}
			v := x[{{$j}}]
			c[1], c[0] = bits.Mul64(v, y[0])
			m := c[0] * modinv
			c[2] = madd0(m, mod[0], c[0])
			{{- range $i := intRange 1 $limbCount }}
				c[1], c[0] = madd1(v, y[{{$i}}], c[1])
				{{- if eq $i $lastLimb }}
					t[{{$lastLimb}}], t[{{sub $i 1}}]  = madd3(m, mod[{{$i}}], c[0], c[2], c[1])
				{{- else}}
					c[2], t[{{sub $i 1}}] = madd2(m, mod[{{$i}}], c[2], c[0])
				{{- end}}
			{{- end}}
		{{- else if eq $j $lastLimb}}
			v = x[{{$j}}]
			c[1], c[0] = madd1(v, y[0], t[0])
			m = c[0] * modinv
			c[2] = madd0(m, mod[0], c[0])
			{{- range $i := intRange 1 $limbCount}}
				c[1], c[0] = madd2(v, y[{{$i}}],  c[1], t[{{$i}}])
				{{- if eq $i $lastLimb}}
					z[{{$lastLimb}}], z[{{sub $i 1}}] = madd3(m, mod[{{$i}}], c[0], c[2], c[1])
				{{- else}}
					c[2], z[{{sub $i 1}}] = madd2(m, mod[{{$i}}],  c[2], c[0])
				{{- end}}
			{{- end}}
		{{- else}}
			v = x[{{$j}}]
			c[1], c[0] = madd1(v, y[0], t[0])
			m = c[0] * modinv
			c[2] = madd0(m, mod[0], c[0])
			{{- range $i := intRange 1 $limbCount}}
				c[1], c[0] = madd2(v, y[{{$i}}], c[1], t[{{$i}}])
				{{- if eq $i $lastLimb}}
					t[{{$lastLimb}}], t[{{sub $i 1}}] = madd3(m, mod[{{$i}}], c[0], c[2], c[1])
				{{- else}}
					c[2], t[{{sub $i 1}}] = madd2(m, mod[{{$i}}], c[2], c[0])
				{{- end}}
			{{- end}}
		{{-  end }}
	{{- end }}

	_, c[1] = bits.Sub64(z[0], mod[0], 0)
    {{- range $i := intRange 1 $limbCount }}
	    _, c[1] = bits.Sub64(z[{{$i}}], mod[{{$i}}], 0)
    {{- end }}

	if c[1] != 0 { // unnecessary sub
		sub_val = Zero{{$limbCount}}Limbs
	}

	_, c[1] = bits.Sub64(z[0], sub_val[0], 0)

    {{- range $i := intRange 1 $limbCount }}
	    _, c[1] = bits.Sub64(z[{{$i}}], sub_val[{{$i}}], 0)
    {{- end }}

	return nil
}

/*
	Modular Addition
*/

func addmod{{mul $limbCount $limbBits}}(z, x, y, mod []uint64) {
	var c uint64
	tmp := {{ makeZeroedLimbs $limbCount}}

	if x[{{$lastLimb}}] >= mod[{{$lastLimb}}] || y[{{$lastLimb}}] >= mod[{{$lastLimb}}] {
		panic(errors.New("x/y must be smaller than modulus"))
	}

	{{- range $i := intRange 0 $limbCount }}
		{{- if eq $i 0}}
			z[{{$i}}], c = bits.Add64(x[{{$i}}], y[{{$i}}], 0)
		{{- else}}
			z[{{$i}}], c = bits.Add64(x[{{$i}}], y[{{$i}}], c)
		{{- end}}
	{{- end }}

	{{- range $i := intRange 0 $limbCount }}
		{{- if eq $i 0}}
			tmp[{{$i}}], c = bits.Sub64(tmp[{{$i}}], mod[{{$i}}], 0)
		{{- else}}
			tmp[{{$i}}], c = bits.Sub64(tmp[{{$i}}], mod[{{$i}}], c)
		{{- end}}
	{{- end }}

	if c == 0 {
		copy(z, tmp[:])
	}
}

func submod{{mul $limbCount $limbBits}}(z, x, y, mod []uint64) {
	var c, c1 uint64
	tmp := {{ makeZeroedLimbs $limbCount}}

	if x[{{$lastLimb}}] >= mod[{{$lastLimb}}] || y[{{$lastLimb}}] >= mod[{{$lastLimb}}] {
		panic(errors.New("x/y must be smaller than modulus"))
	}

	{{- range $i := intRange 0 $limbCount }}
		{{- if eq $i 0}}
			tmp[{{$i}}], c = bits.Sub64(x[{{$i}}], y[{{$i}}], 0)
		{{- else}}
			tmp[{{$i}}], c = bits.Sub64(x[{{$i}}], y[{{$i}}], c)
		{{- end}}
	{{- end }}

	{{- range $i := intRange 0 $limbCount }}
		{{- if eq $i 0}}
			z[{{$i}}], c1 = bits.Add64(tmp[{{$i}}], mod[{{$i}}], 0)
		{{- else}}
			z[{{$i}}], c1  = bits.Add64(tmp[{{$i}}], mod[{{$i}}], c1)
		{{- end}}
	{{- end }}

	if c == 0 {
		copy(z, tmp[:])
	}

}
